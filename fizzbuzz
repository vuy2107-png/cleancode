public class FizzBuzzTranslate {
    public static String translate(int number) {
        if (number <= 0) {
            throw new IllegalArgumentException("Số phải lớn hơn 0");
        }

        boolean isFizz = number % 3 == 0;
        boolean isBuzz = number % 5 == 0;
        boolean contains3 = String.valueOf(number).contains("3");
        boolean contains5 = String.valueOf(number).contains("5");

        // Luật FizzBuzz mở rộng
        if (isFizz && isBuzz)
            return "FizzBuzz";

        if (isFizz || contains3)
            return "Fizz";

        if (isBuzz || contains5)
            return "Buzz";

        // Không rơi vào các trường hợp trên thì đọc số
        return readNumberInVietnamese(number);
    }

    // Đọc số nhỏ hơn 100 bằng tiếng Việt
    private static String readNumberInVietnamese(int number) {
        if (number < 0 || number >= 100)
            throw new IllegalArgumentException("Chỉ hỗ trợ số nhỏ hơn 100");

        String[] digits = {"không", "một", "hai", "ba", "bốn", "năm", "sáu", "bảy", "tám", "chín"};

        if (number < 10) {
            return digits[number];
        } else {
            int tens = number / 10;
            int ones = number % 10;

            if (tens == 1) {
                if (ones == 0) return "mười";
                if (ones == 5) return "mười lăm";
                return "mười " + digits[ones];
            } else {
                String result = digits[tens] + " mươi";
                if (ones == 0) return result;
                if (ones == 1) return result + " mốt";
                if (ones == 5) return result + " lăm";
                return result + " " + digits[ones];
            }
        }
    }

    public static void main(String[] args) {
        // Demo trực tiếp
        for (int i = 1; i <= 35; i++) {
            System.out.println(i + " -> " + translate(i));
        }
    }
}
